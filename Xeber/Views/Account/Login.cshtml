@model Xeber.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Login</title>
    <link href="~/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="container">
        <form asp-action="Login" method="post" class="form-signin">
            <h1 class="form-signin-heading text-muted">Sign In</h1>
            <input type="hidden" value="@ViewBag.returnUrl" name="returnUrl" />
            <div class="form-group">
                @*<label asp-for="Email"></label>*@
                <input asp-for="Email" type="text" class="form-control" placeholder="Email address" required="" autofocus="">
            </div>
            <div class="form-group">
                @*<label asp-for="Password"></label>*@
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Sign In
            </button>
        </form>
    </div>
</body>
</html>



