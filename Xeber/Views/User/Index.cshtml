@model IEnumerable<Xeber.Models.ApplicationUser>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="bg-primary text-white p-1 m-1">
        <h2> User List</h2>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <table class="table table-bordered table-sm table-striped p-1 m-1">
        <tr>
            <th> User Id</th>
            <th> User Name</th>
            <th> User Email</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    User Yoxdur
                </td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-danger"><i class="fas fa-trash m-2"></i></button>
                            <a asp-action="Edit"  class="btn btn-success" asp-route-id="@user.Id"><i class="fas fa-edit m-2"></i></a>
                          
                        </form>
                    </td>
                </tr>
            }
        }


    </table>
    <a class="btn btn-primary" asp-action="Create">Create User</a>
</body>
</html>
